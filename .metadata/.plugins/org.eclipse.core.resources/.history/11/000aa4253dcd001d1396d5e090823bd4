package quiz;

public class QuizEx02 {
	
	public static void main(String[] args) {
		
		int su = 12345;
		
		//1. 변수 선언
		//2. 메세지 출력 및 입력받기		
		//3. 처리(계산)
		//4.결과출력(화면)
		
		int h, m, s;
		int h_n, m_n, _n;
		
		h = 12345 / 3600;	h_n = 12345 % 3600;
		m = h_n / 60;	m_n = h_n % 60;
		s = m_n;
		
		System.out.println(h + ":" + m + ":" + s);

	}

}


/* 문제2]
int su = 12345;
	시 : 분 : 초
		60초 => 1분
	60분
		60초 ==> 3600
*/